@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.title</h1>
            <div class="tags">
                @foreach(var tag in Model.tags)
                {
                    <a href="blog/tag/@tag.Url" class="badge bg-@tag.Color. bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.text</a>
                    
                }
            </div>
           
               <img src="~/img/@Model.Image" class="img-fluid w-25 rounded" alt="">
               <div>
                @Model.content
                <a href="/profile/@Model.user.username">@Model.user.name</a>
               </div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-heade pb-0">
                    <h4>@Model.comments.Count adet sayÄ±da yorum</h4>
                </div>
                <div class="card-body">
                    @foreach(var comment in @Model.comments)
                    {
                        <div class="my-4 d-flex">
                            <img src="/img/@comment.user.Image" alt="" class="avatar rounded-circle float-start me-3", style="width: 50px; height: 50px; object-fit: cover;">
                            <div> 
                                <div class="mb-2">
                                   <h6>@comment.user.username</h6>
                                   <span>@comment.publishedon</span>
                                </div>
                                <h4>@comment.text</h4>
                            </div>
                        </div>
                    }
                    <hr class="my-4">
                    <div>
                        <h4>yorum ekle</h4>
                        <form action="/posts/AddComment" method="post">
                        <input type="hidden" name="postId" value="@Model.postId">
                        <input type="hidden" name="Url" value="@Model.Url">
                        <div class="mb-3">
                            <label for="Text" class="form-label">yorum</label>
                            <textarea type="Text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <button id="btnkayit" type="submit" class="btn btn-primary">kaydet</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        
    </div>
</div>

