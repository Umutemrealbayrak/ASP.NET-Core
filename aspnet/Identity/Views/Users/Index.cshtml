@model IEnumerable<AppUser>
    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Create">kullanıcı ekle</a>    
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                 <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">edit</a>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('silmeye emin misiniz')" style="display:inline-block">
                            <input type="hidden" value="@user.Id" name="id">  
                            <button type="submit" class="btn btn-danger btn-sm">delete</button>
                        </form>
                    </td>
                 </tr> 
            }
        </tbody>
    </table>
</body>
</html>
